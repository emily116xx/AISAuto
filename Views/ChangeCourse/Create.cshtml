@using AISAutoForms.ViewModels
@model ChangeCourseVM

<h1>Change of Course (BBUS, IT, NZCEL)</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

