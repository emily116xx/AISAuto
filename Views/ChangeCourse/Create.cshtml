            </div> *@

            <div class="form-group mb-4">
                <label class="control-label" style="font-weight: bold;">Request Type</label><br />
                <input type="checkbox" name="ChgCourseType" value="Withdraw from a Course" /> Withdraw from a Course<br />
                <input type="checkbox" name="ChgCourseType" value="Add Another Course" /> Add Another Course
                <span asp-validation-for="ChgCourseType" class="text-danger"></span>
            </div>


            @* Student Section *@
            <div class="form-group mb-4"> <!-- Added mb-4 for margin-bottom -->
                <label asp-for="StudentName" class="control-label"></label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <input asp-for="StudentId" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentAddress" class="control-label"></label>
                <input asp-for="StudentAddress" class="form-control" />
                <span asp-validation-for="StudentAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentPhone" class="control-label"></label>
                <input asp-for="StudentPhone" class="form-control" />
                <span asp-validation-for="StudentPhone" class="text-danger"></span>
            </div>
            <div class="form-group mb-4"> <!-- Added mb-4 for margin-bottom -->
                <label asp-for="StudentEmail" class="control-label"></label>
                <input asp-for="StudentEmail" class="form-control" />
                <span asp-validation-for="StudentEmail" class="text-danger"></span>
            </div>

            <div class="form-group mb-4"> <!-- Added mb-4 for margin-bottom -->
                <label asp-for="ProgrammeOfStudy" class="control-label" style="font-weight: bold;">Programme of Study</label>
                <select asp-for="ProgrammeOfStudy" class="form-control">
                    <option value="Postgraduate Diploma in IT">Postgraduate Diploma in IT</option>
                    <option value="NZCEL">NZCEL</option>
                    <option value="Master's in IT">Master's in IT</option>
                    <option value="Bachelor in IT">Bachelor in IT</option>
                </select>
                <span asp-validation-for="ProgrammeOfStudy" class="text-danger"></span>
            </div>

            <div class="form-group mb-4"> <!-- Added mb-4 for margin-bottom -->
                <label class="control-label" style="font-weight: bold;">LIST ALL COURSES CURRENTLY ENROLLED</label>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="CourseCode" class="control-label">Course Code</label>
                        <input asp-for="CourseCode" class="form-control" />
                        <span asp-validation-for="CourseCode" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CourseName" class="control-label">Course Name</label>
                        <input asp-for="CourseName" class="form-control" style="width: 200%" />
                        <span asp-validation-for="CourseName" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="form-group mb-4"> <!-- Added mb-4 for margin-bottom -->
                <label class="control-label" style="font-weight: bold;">REQUEST TO WITHDRAW FROM COURSE</label>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="WitdCourseCode" class="control-label">Course Code</label>
                        <input asp-for="WitdCourseCode" class="form-control" />
                        <span asp-validation-for="WitdCourseCode" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="WitdCourseName" class="control-label">Course Name</label>
                        <input asp-for="WitdCourseName" class="form-control" style="width: 200%" />
                        <span asp-validation-for="WitdCourseName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-4"> <!-- Added mb-4 for margin-bottom -->
                <label class="control-label" style="font-weight: bold;">REQUEST TO ADD COURSE</label>
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="AddCourseCode" class="control-label">Course Code</label>
                        <input asp-for="AddCourseCode" class="form-control" />
                        <span asp-validation-for="AddCourseCode" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="AddCourseName" class="control-label">Course Name</label>
                        <input asp-for="AddCourseName" class="form-control" style="width: 200%" />
                        <span asp-validation-for="AddCourseName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-4">                 <!-- Added mb-4 for margin-bottom -->                
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="Signature" class="control-label">Student's Signature</label>
                        <input asp-for="Signature" class="form-control" />
                        <span asp-validation-for="Signature" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="SubmitDate" class="control-label">Course Name</label>
                        <input asp-for="SubmitDate" class="form-control" style="width: 200%" />
                        <span asp-validation-for="SubmitDate" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

